    <script>
        const volunteersInput = document.getElementById('volunteers');
        const volunteersSlider = document.getElementById('volunteersSlider');
        const hoursInput = document.getElementById('hours');
        const hoursSlider = document.getElementById('hoursSlider');
        const budgetInput = document.getElementById('budget');
        const sandwichCount = document.getElementById('sandwichCount');
        const hourlyRate = document.getElementById('hourlyRate');
        const perPersonRate = document.getElementById('perPersonRate');
        const efficiencyLevel = document.getElementById('efficiencyLevel');
        const efficiencyTip = document.getElementById('efficiencyTip');
        const budgetSection = document.getElementById('budgetSection');
        const budgetSandwiches = document.getElementById('budgetSandwiches');
        const capacitySandwiches = document.getElementById('capacitySandwiches');
        const limitingFactor = document.getElementById('limitingFactor');
        const recommendation = document.getElementById('recommendation');
        
        const COST_PER_SANDWICH = 1.50;
        
        function roundToSensibleNumber(num) {
            // Round to practical numbers for event planning
            if (num <= 50) {
                return Math.round(num / 5) * 5;  // Round to nearest 5
            } else if (num <= 200) {
                return Math.round(num / 10) * 10;  // Round to nearest 10
            } else if (num <= 500) {
                return Math.round(num / 25) * 25;  // Round to nearest 25
            } else {
                return Math.round(num / 50) * 50;  // Round to nearest 50
            }
        }
        
        function calculateEfficiency(volunteers) {
            // Efficiency scaling based on group size
            // Solo: 2 sandwiches/person/hour
            // 20+ people: 25 sandwiches/person/hour (max efficiency)
            
            if (volunteers === 1) return 2;
            if (volunteers >= 20) return 25; // Plateau at 20 people
            
            // Aggressive S-curve scaling from 1-20 people
            // Slow growth 1-5, rapid growth 5-15, tapering 15-20
            const minRate = 2;
            const maxRate = 25;
            
            // Using a sigmoid curve for more realistic scaling
            const midpoint = 10; // Steepest efficiency gain around 10 people
            const steepness = 0.3; // Controls how sharp the transition is
            
            const x = (volunteers - midpoint) * steepness;
            const sigmoid = 1 / (1 + Math.exp(-x));
            
            return minRate + (maxRate - minRate) * sigmoid;
        }
        
        function getEfficiencyDescription(volunteers, rate) {
            if (volunteers < 5) {
                return {
                    level: "Individual pace",
                    tip: "Small groups work at a steady pace. Consider recruiting more volunteers for assembly-line efficiency."
                };
            } else if (volunteers < 10) {
                return {
                    level: "Small team efficiency",
                    tip: "Good teamwork emerging. You're getting some division of labor benefits."
                };
            } else if (volunteers < 15) {
                return {
                    level: "Strong team production",
                    tip: "Great efficiency gains! Assembly line starting to work really well."
                };
            } else if (volunteers < 20) {
                return {
                    level: "Near-peak efficiency",
                    tip: "Almost at maximum efficiency! Well-organized assembly line in action."
                };
            } else {
                return {
                    level: "Peak assembly line âœ¨",
                    tip: "Maximum efficiency achieved! Full assembly line with specialized stations. Adding more people adds parallel lines."
                };
            }
        }
        
        function updateCalculations() {
            const volunteers = parseInt(volunteersInput.value) || 1;
            const hours = parseFloat(hoursInput.value) || 0.5;
            const budget = parseFloat(budgetInput.value) || 0;
            
            // Keep sliders in sync
            if (volunteers <= 200) {
                volunteersSlider.value = volunteers;
            }
            if (hours <= 4) {
                hoursSlider.value = hours;
            }
            
            // Calculate sandwiches based on efficiency curve
            const ratePerPersonPerHour = calculateEfficiency(volunteers);
            const rawTotalSandwiches = volunteers * ratePerPersonPerHour * hours;
            const totalSandwiches = roundToSensibleNumber(rawTotalSandwiches);
            const sandwichesPerHour = roundToSensibleNumber(volunteers * ratePerPersonPerHour);
            
            sandwichCount.textContent = totalSandwiches.toLocaleString();
            hourlyRate.textContent = sandwichesPerHour.toLocaleString();
            perPersonRate.textContent = `~${Math.round(ratePerPersonPerHour)} sandwiches per person/hour`;
            
            // Update efficiency description
            const efficiencyInfo = getEfficiencyDescription(volunteers, ratePerPersonPerHour);
            efficiencyLevel.textContent = efficiencyInfo.level;
            efficiencyTip.textContent = efficiencyInfo.tip;
            
            // Budget analysis
            if (budget > 0) {
                budgetSection.style.display = 'block';
                const sandwichesFromBudget = Math.floor(budget / COST_PER_SANDWICH);
                budgetSandwiches.textContent = sandwichesFromBudget.toLocaleString();
                capacitySandwiches.textContent = totalSandwiches.toLocaleString();
                
                if (sandwichesFromBudget < totalSandwiches) {
                    limitingFactor.textContent = "âš ï¸ Budget Limited";
                    limitingFactor.setAttribute('data-status', 'limited');
                    const shortfall = (totalSandwiches - sandwichesFromBudget) * COST_PER_SANDWICH;
                    recommendation.textContent = `Need $${shortfall.toFixed(2)} more to reach capacity`;
                } else {
                    limitingFactor.textContent = "âœ… Budget Sufficient";
                    limitingFactor.setAttribute('data-status', 'sufficient');
                    const excess = budget - (totalSandwiches * COST_PER_SANDWICH);
                    if (excess > 50) {
                        recommendation.textContent = `Consider adding volunteers or time`;
                    } else {
                        recommendation.textContent = `Well matched to capacity!`;
                    }
                }
            } else {
                budgetSection.style.display = 'none';
            }
        }
        
        // Sync sliders with input fields
        function syncFromSlider(slider, input) {
            input.value = slider.value;
            updateCalculations();
        }
        
        // Event listeners for inputs
        volunteersInput.addEventListener('input', updateCalculations);
        hoursInput.addEventListener('input', updateCalculations);
        budgetInput.addEventListener('input', updateCalculations);
        
        // Event listeners for sliders
        volunteersSlider.addEventListener('input', () => syncFromSlider(volunteersSlider, volunteersInput));
        hoursSlider.addEventListener('input', () => syncFromSlider(hoursSlider, hoursInput));
        
        // Initial calculation
        updateCalculations();
    </script>
</body>
</html>